{% extends 'base.html.twig' %}

{% block title %}Idea index{% endblock %}

{% block body %}
    <h1>Idea index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Creator</th>
                <th>Title</th>
                <th>Description</th>
                <th>Upvotes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for idea in ideas %}
            <tr>
                <td>{{ idea.id }}</td>
                <td>{{ idea.getIdCreator.username }}</td>
                <td>{{ idea.title }}</td>
                <td>{{ idea.description }}</td>
                <td>{{ idea.upvotes }}</td>
                <td>
                    <a href="{{ path('idea_show', {'id': idea.id}) }}">show</a>
                    <a href="{{ path('idea_edit', {'id': idea.id}) }}">edit</a>
                    <a href="{{ path('idea_upvote', {'id': idea.id}) }}">upvote</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('idea_new') }}">Create new</a>
{% endblock %}